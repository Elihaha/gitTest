  <!--根据子用户id查询用户权限，app_id为所属系统标识符-->
  <select id="findByChildUserId" parameterType="int" resultMap="BaseResultMap">
       SELECT
          DISTINCT m.menu_id,
          m.parent_id,
          m.name,
          m.url,
          m.perms,
          m.type,
          m.icon,
          m.order_num,
          m.app_id
        FROM sys_operator_menu om
        LEFT JOIN sys_menu m
        ON om.menu_id = m.menu_id
        LEFT JOIN sys_macro dict
        ON m.app_id = dict.id
        WHERE om.operator_id = #{childUserId}
        AND dict.value='edit-system' AND m.name != 'eidt编辑系统'
  </select>

  <!--根据用户id查询用户权限，app_id为所属系统标识符-->
  <select id="findByUserId" parameterType="int" resultMap="BaseResultMap">
        SELECT
          DISTINCT m.menu_id,
          m.parent_id,
          m.name,
          m.url,
          m.perms,
          m.type,
          m.icon,
          m.order_num,
          m.app_id
        FROM sys_operator_role ur
        LEFT JOIN sys_role_menu rm
        ON ur.role_id = rm.role_id
        LEFT JOIN sys_menu m
        ON rm.menu_id = m.menu_id
        LEFT JOIN sys_macro dict
        ON m.app_id = dict.id
        WHERE ur.operator_id = #{id}
        AND dict.value='edit-system' AND m.name != 'eidt编辑系统'
  </select>

