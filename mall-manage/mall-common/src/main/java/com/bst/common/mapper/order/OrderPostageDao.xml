<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bst.common.mapper.order.OrderPostageDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.bst.common.entity.order.OrderPostageEntity" id="orderPostageMap">
        <result property="id" column="id"/>
        <result property="shopId" column="shop_id"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="postage" column="postage"/>
        <result property="status" column="STATUS"/>
    </resultMap>

	<select id="queryObject" resultType="com.bst.common.entity.order.OrderPostageEntity">
		select * from order_postage where id = #{value}
	</select>

	<select id="queryList" resultType="com.bst.common.entity.order.OrderPostageEntity">
		select * from order_postage
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from order_postage 
	</select>
	 
	<insert id="save" parameterType="com.bst.common.entity.order.OrderPostageEntity" useGeneratedKeys="true" keyProperty="id">
		insert into order_postage
		(
			`shop_id`, 
			`province`, 
			`city`, 
			`postage`, 
			`STATUS`
		)
		values
		(
			#{shopId}, 
			#{province}, 
			#{city}, 
			#{postage}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="com.bst.common.entity.order.OrderPostageEntity">
		update order_postage 
		<set>
			<if test="shopId != null">`shop_id` = #{shopId}, </if>
			<if test="province != null">`province` = #{province}, </if>
			<if test="city != null">`city` = #{city}, </if>
			<if test="postage != null">`postage` = #{postage}, </if>
			<if test="status != null">`STATUS` = #{status}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from order_postage where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from order_postage where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>