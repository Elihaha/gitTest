<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bst.common.mapper.order.PostageConfigDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.bst.common.entity.order.PostageConfigEntity" id="postageConfigMap">
        <result property="id" column="id"/>
        <result property="province" column="province"/>
        <result property="postage" column="postage"/>
        <result property="createTime" column="create_time"/>
        <result property="lastUpdateTime" column="last_update_time"/>
        <result property="lastUpdateUserId" column="last_update_user_id"/>
        <result property="status" column="status"/>
        <result property="shopId" column="shop_id"/>
    </resultMap>

    <resultMap id="postageConfigDtoMap" type="com.bst.common.modle.order.PostageConfigDto">
        <result property="id" column="id"/>
        <result property="province" column="province"/>
        <result property="postage" column="postage"/>
        <result property="createTime" column="create_time"/>
        <result property="lastUpdateTime" column="last_update_time"/>
        <result property="lastUpdateUserId" column="username"/>
        <result property="status" column="status"/>
        <result property="shopId" column="shop_id"/>
    </resultMap>


    <select id="queryObject" resultMap="postageConfigMap">
		select * from postage_config where id = #{id}
	</select>

    <select id="queryList" resultMap="postageConfigMap">
        select * from postage_config
        <if test="like != null">
            where  LOCATE(#{like},province)>0
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>


    <select id="queryPostageConfigPojoList" resultMap="postageConfigDtoMap">
        select
        config.* ,op.name as username
        from
        postage_config as config
        LEFT JOIN
        operator as op
        on
        config.last_update_user_id = op.id
        <where>
            <if test="like != null">
                LOCATE(#{like},province)>0
            </if>
            <if test="userID !=null">
               and    shop_id = #{userID}
            </if>
        </where>

        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from postage_config
        <where>
            <if test="like != null">
                LOCATE(#{like},province)>0
            </if>
            <if test="userID !=null">
                and    shop_id = #{userID}
            </if>
        </where>

    </select>
    <select id="queryByProvince" resultType="com.bst.common.entity.order.PostageConfigEntity">
		  select  *  from  postage_config  where  province = #{name}  and  shop_id =#{shopId}
	</select>

    <insert id="save" parameterType="com.bst.common.entity.order.PostageConfigEntity">
		insert into postage_config
		(
			`id`, 
			`province`, 
			`postage`, 
			`create_time`, 
			`last_update_time`, 
			`last_update_user_id`, 
			`status`,
			`shop_id`
		)
		values
		(
			#{id}, 
			#{province}, 
			#{postage}, 
			#{createTime}, 
			#{lastUpdateTime}, 
			#{lastUpdateUserId}, 
			#{status},
			#{shopId}
		)
	</insert>

    <update id="update" parameterType="com.bst.common.entity.order.PostageConfigEntity">
        update postage_config
        <set>
            <if test="province != null">`province` = #{province},</if>
            <if test="postage != null">`postage` = #{postage},</if>
            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="lastUpdateTime != null">`last_update_time` = #{lastUpdateTime},</if>
            <if test="lastUpdateUserId != null">`last_update_user_id` = #{lastUpdateUserId},</if>
            <if test="status != null">`status` = #{status}</if>
        </set>
        where id = #{id}  and   <if test="shopId != null">`shop_id` = #{shopId}</if>
    </update>

    <delete id="delete">
		delete from postage_config where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from postage_config where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="queryByGoodsIdAndAddress" resultType="java.math.BigDecimal">
		SELECT
	        postage
        FROM
	      `postage_config` p left join goods_spu s on p.shop_id = s.shop_id
        WHERE
        s.id = #{goodsId}
        AND p.province = #{address}
	</select>
</mapper>